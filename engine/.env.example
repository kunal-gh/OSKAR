# OSKAR Environment Configuration
# Copy this file to `.env` and populate with real values.
# NEVER commit the .env file to version control.

# === Authentication ===
# API keys used by the OSKAR inference engine.
OSKAR_API_KEY=your-analyst-api-key-here
OSKAR_ADMIN_KEY=your-admin-api-key-here
OSKAR_SYSTEM_KEY=your-system-api-key-here

# === Database ===
POSTGRES_HOST=localhost
POSTGRES_DB=oskar_trust
POSTGRES_USER=oskar
POSTGRES_PASSWORD=your-postgres-password-here

# === Vector Database ===
QDRANT_HOST=localhost
QDRANT_PORT=6333

# === Message Broker ===
REDIS_URL=redis://localhost:6379/0

# === External APIs ===
# Optional: used by the GraphRAG pipeline to verify claims externally
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password-here
